@using Mission11_ajames26.Models

@{
}

@model Cart
@*Calculate cart total and display*@
<div class="">
    @if (Model.CartItems.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your Cart:</b>
            @Model.CartItems.Sum(i => i.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Purchase" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>